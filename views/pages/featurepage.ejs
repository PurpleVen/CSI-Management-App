  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script>
    $('#add-feature-images-form').on('submit', function(event) {
  event.preventDefault(); // Prevent the default form submission

  const fileInput = document.getElementById('event-image');
    const filePath = fileInput.value;
    const allowedExtensions = /(\.jpg|\.jpeg|\.png|\.HEIC)$/i;

    if (!allowedExtensions.exec(filePath)) {
      alert('Invalid file type. Please upload only image files (jpg, jpeg, png, heic).');
      fileInput.value = ''; // Clear the file input for new selection
      return false;
    }

  const formData = new FormData(this); // 'this' is the form element

  fetch('/featurepage', {
    method: 'POST',
    body: formData, // Send the form data
  })
  .then(response => {
    if (!response.ok) throw new Error('Network response was not ok');
    return response.text();
  })
  .then(result => {
    alert('Image added successfully!');
    window.location.reload();
  })
  .catch(error => {
    alert('Failed to add Image. Please try again.');
    console.error('Error submitting form:', error);
  });
});


  </script>


