<div id="flash-message" style="display: none;" class="alert" role="alert"></div>

               <!-- Sign up form -->
          <section class="add-feature-images">
            <div class="container bg-white">
              <div class="signup-content">
                <div class="signup-form">

                  <!-- Example: Ensure the action attribute is correctly set if you're not preventing the default action -->
                  <form method="POST" action="/featurepage" class="register-form" id="add-feature-images-form" enctype="multipart/form-data">

                    
                    <div class="form-group">
                      <label for="event-name"><i class="ni ni-single-02"></i> Event Name</label>
                      <input type="text" name="event_name" id="event-name" placeholder="Event Name" class="form-control form-control-lg" required  />
                    </div>
                 
                    
                    <div class="form-group">
                      <label for="class"><i class="ni ni-calendar-grid-58"></i> Event Date</label>
                      <input type="date" name="event_date" id="event-date" placeholder="Event Date" class="form-control form-control-lg" required />
                    </div>

                    <div class="form-group">
                        <label for="event-image"><i class="ni ni-album-2"></i> Event Image</label>
                        <input type="file" name="event_image" id="event-image" class="form-control form-control-lg" accept="image/png, image/jpeg, image/jpg, image/heic" required /> <!-- Updated field name -->
                      </div>
                      
                      
                 
                    <div class="form-group form-button">
                      <input type="submit" name="add_image" id="add-image" class="form-submit btn btn-dark btn-sm w-100 mb-3" value="Add Feature Image" />
                    </div>
                  </form>
                </div>
                <!-- Include your signup-image section -->
