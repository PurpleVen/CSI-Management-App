<body class="g-sidenav-show bg-gray-100">
  <div class="min-height-300 bg-primary position-absolute w-100"></div>
  <%- include('../templates/asidebar'); %>
  <div class="main-content position-relative max-height-vh-100 h-100">


    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header pb-0">
              <div class="d-flex align-items-center">
                <p class="mb-0">ADD FEATURE IMAGES</p>
                
              </div>
            </div>
            <div class="card-body">
              <!-- Add a flash message container -->
<div id="flash-message" style="display: none;" class="alert" role="alert"></div>

               <!-- Sign up form -->
          <section class="add-feature-images">
            <div class="container bg-white">
              <div class="signup-content">
                <div class="signup-form">

                  <!-- Example: Ensure the action attribute is correctly set if you're not preventing the default action -->
                  <form method="POST" action="/featurepage" class="register-form" id="add-feature-images-form" enctype="multipart/form-data">

                    
                    <div class="form-group">
                      <label for="event-name"><i class="ni ni-single-02"></i> Event Name</label>
                      <input type="text" name="event_name" id="event-name" placeholder="Event Name" class="form-control form-control-lg" required  />
                    </div>
                 
                    
                    <div class="form-group">
                      <label for="class"><i class="ni ni-calendar-grid-58"></i> Event Date</label>
                      <input type="date" name="event_date" id="event-date" placeholder="Event Date" class="form-control form-control-lg" />
                    </div>

                    <div class="form-group">
                        <label for="event-image"><i class="ni ni-album-2"></i> Event Image</label>
                        <input type="file" name="event_image" id="event-image" class="form-control form-control-lg" /> <!-- Updated field name -->
                      </div>
                      
                      
                 
                    <div class="form-group form-button">
                      <input type="submit" name="add_image" id="add-image" class="form-submit btn btn-dark btn-sm w-100 mb-3" value="Add Feature Image" />
                    </div>
                  </form>
                </div>
                <!-- Include your signup-image section -->
              </div>
            </div>
          </section>
        
         
            </div>
          </div>
        </div>
  
      </div>
      <%- include('../templates/footer'); %>
    </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script>
    $('#add-feature-images-form').on('submit', function(event) {
  event.preventDefault(); // Prevent the default form submission

  const formData = new FormData(this); // 'this' is the form element

  fetch('/featurepage', {
    method: 'POST',
    body: formData, // Send the form data
  })
  .then(response => {
    if (!response.ok) throw new Error('Network response was not ok');
    return response.text();
  })
  .then(result => {
    alert('Image added successfully!');
    window.location.reload();
  })
  .catch(error => {
    alert('Failed to add Image. Please try again.');
    console.error('Error submitting form:', error);
  });
});


  </script>


  <!--   Core JS Files   -->
  <script src="../assets/js/core/popper.min.js"></script>
  <script src="../assets/js/core/bootstrap.min.js"></script>
  <script src="../assets/js/plugins/perfect-scrollbar.min.js"></script>
  <script src="../assets/js/plugins/smooth-scrollbar.min.js"></script>
  <script>
    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
      var options = {
        damping: '0.5'
      }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
  </script>
  <!-- Github buttons -->
  <script async defer src="https://buttons.github.io/buttons.js"></script>
  <!-- Control Center for Soft Dashboard: parallax effects, scripts for the example pages etc -->
  <script src="../assets/js/argon-dashboard.min.js?v=2.0.4"></script>
