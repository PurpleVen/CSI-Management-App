  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script>
    // Script for complete table fetch from mysql starts
    $(document).ready(function () {

      load_data();

      function load_data() {
        $.ajax({
          url: "/fetchall",
          method: "GET",
          dataType: "JSON",
          success: function (data) {
            console.log("fetched");
            var html = '';
            var status_message = '';
            console.log(data.data[0].name)

            if (data.data.length > 0) {

              for (var count = 0; count < data.data.length; count++) {

                // var desc_data = JSON.parse(data.data[count].description);

                // console.log(Buffer.from(desc_data["data"]).toString());


                if (data.data[count].status == 0) {
                  status_message = "Approval Pending";
                  color_type = 'yellow';
                }
                else if (data.data[count].status == 1) {
                  status_message = "Approved by SBC";
                  color_type = "cyan";
                }
                else if (data.data[count].status == 2) {
                  status_message = "Approved by HOD";
                  color_type = 'chartreuse';
                }
                else if (data.data[count].status == -1) {
                  status_message = "Rejected";
                  color_type = 'red';
                }

                // var blob = new Blob([data.data[count].description],{type:'text/plain'});
                // //link.href = URL.createObjectURL(blob);

                //  var reader = new FileReader();
                //  reader.readAsDataURL(blob);

                // reader.onload = function(){
                //     alert(reader.result);
                // }


                // console.log(data.data[count].description);
                // let abc = new Uint32Array(data.data[count].description);
                // console.log(abc);
                //  var abc = new Blob([data.data[count].description],{ type: 'text/plain' });

                html += `
                                  <tr>
                                      
                                      <td style="vertical-align: middle; text-align: center;color: black;">`+ data.data[count].name + `</td>
                                      <td style="vertical-align: middle; text-align: center;color: black;">`+ data.data[count].theme + `</td>
                                      <td style="vertical-align: middle; text-align: center;color: black;">`+ data.data[count].M_agenda + `</td>
                                      <td style="vertical-align: middle; text-align: center;color: black;">`+ data.data[count].venue + `</td>
                                      
                                      <td style="vertical-align: middle; text-align: center;"> <span class="badge badge-sm" style="background-color:`+ color_type + `; color: black;">` + status_message + `</span></td>
                                      <td style="vertical-align: middle; text-align: center;"><button type="button" class="btn btn-warning btn-sm edit" data-id="`+ data.data[count].eid + `">View</button></td>
                                  </tr>
                                  `;
              }
            }


            $('tbody').html(html);

          },
          error: function (XMLHttpRequest, textStatus, errorThrown) {
            console.log("inside AJAX function: Err");
            alert("Status: " + textStatus); alert("Error: " + errorThrown);
          }
        });
      }

      // Script for complete table fetch from mysql ends

      // Script for single row fetch starts

      $(document).on('click', '.edit', function () {

        var id = $(this).data('id');


        $('#dynamic_modal_title').text('Event Proposal');

        $('#action').val('Edit');

        // $('#action_button').text('Close');

        $('#action_modal').modal('show');

        $.ajax({
          url: "/fetchsingle",
          method: "GET",
          data: { id: id },
          dataType: "JSON",
          success: function (data) {
            console.log(data);
            $('#first_name').val(data.name);
            $('#last_name').val(data.theme);
            $('#gender').val(data.M_agenda);
            $('#age').val(data.venue);
            // $('#date').val(data.event_date);
            $('#speaker').val(data.speaker);
            $('#cb').val(data.creative_budget);
            $('#pb').val(data.publicity_budget);
            // $('#tb').val(data.total_budget);
            // $('#rf').val(data.reg_fee_c);
            $('#prize').val(data.prize);
            $('#id').val(data.eid);
          },
          error: function (XMLHttpRequest, textStatus, errorThrown) {
            console.log("inside AJAX function: Err");
            alert("Status: " + textStatus); alert("Error: " + errorThrown);
          }

        });

      });
      // Script for single row fetch ends


      //Script for status approval starts

      $(document).on('click', '.eventapprove', function () {

        var id = $('#id').val();
        // var first_name = $('#first_name').val();

        $.ajax({
          url: "/hodstatusapprove",
          method: "GET",
          data: { id: id },
          dataType: "JSON",
          success: function (data) {

            alert("HOD Accept Status Updated Successfully");
            // console.log(data);
            // $('#first_name').val(data.M_agenda);
            // $('#id').val(data.eid);
          },
          error: function (XMLHttpRequest, textStatus, errorThrown) {
            console.log("inside AJAX function: Err");
            alert("Status: " + textStatus); alert("Error: " + errorThrown);
          }

        });

      });
      //Script for status approval ends

      //Script for status rejection starts

      $(document).on('click', '.eventreject', function () {

        var id = $('#id').val();
        // var first_name = $('#first_name').val();

        $.ajax({
          url: "/hodstatusreject",
          method: "GET",
          data: { id: id },
          dataType: "JSON",
          success: function (data) {

            alert("HOD Reject Status Updated Successfully");
            // console.log(data);
            // $('#first_name').val(data.M_agenda);
            // $('#id').val(data.eid);
          },
          error: function (XMLHttpRequest, textStatus, errorThrown) {
            console.log("inside AJAX function: Err");
            alert("Status: " + textStatus); alert("Error: " + errorThrown);
          }

        });

      });
      //Script for status rejection ends

    });

  </script>





