                        </div>
                        <div class="mb-3">
                          <label class="form-label">Venue</label>
                          <input type="text" name="age" id="age" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                          <label class="form-label">Speaker</label>
                          <input type="text" name="speaker" id="speaker" class="form-control" readonly />
                        </div>

                        <!--creative budget-->
                        <div class="mb-3">
                          <label class="form-label">Creative budget</label>
                          <input type="text" name="cb" id="cb" class="form-control" readonly />
                        </div>

                        <!--publicity budget-->
                        <div class="mb-3">
                          <label class="form-label">Publicity budget</label>
                          <input type="text" name="pb" id="pb" class="form-control" readonly />
                        </div>


                        <!--prize-->
                        <div class="mb-3">
                          <label class="form-label">Prize</label>
                          <input type="text" name="prize" id="prize" class="form-control" readonly />
                        </div>

                      </div>
                      <div class="modal-footer">
                        <input type="hidden" name="id" id="id" />
                        <input type="hidden" name="action" id="action" value="Add" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-danger eventreject" id="action_button">Reject</button>
                        <button type="submit" class="btn btn-success eventapprove" id="action_button">Approve</button>


                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

