                    $.ajax({
                      url: "/minutesingle",
                      method: "GET",
                      data: { id: id },
                      dataType: "JSON",

                      success: function (data) {
                        console.log(data);
                        $('#first_name').val(data.minute);
                        // $('#last_name').val(data.da_te);
                        // $('#gender').val(data.ti_me);
                        // $('#age').val(data.creator);
                        $('#id').val(data.id);
                      },
